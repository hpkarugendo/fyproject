<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="ie.dit.fyp.fyproject.Activity2KitchenItem">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="30dp"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:background="@drawable/text_view_header_bg"
            android:text="Order for Table 1"
            android:id="@+id/tv_kitchen_item_header"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/color_white"
            android:textSize="25dp"
            android:text="Starters"
            android:id="@+id/tv_kitchen_item_starters"
            android:background="@drawable/text_view_header_bg"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_below="@+id/tv_kitchen_item_header"
            android:layout_alignParentStart="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/sv_kitchen_item_starters"
            android:layout_below="@+id/tv_kitchen_item_starters"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/color_white"
            android:textSize="25dp"
            android:text="Main Courses"
            android:id="@+id/tv_kitchen_item_mains"
            android:background="@drawable/text_view_header_bg"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_below="@+id/sv_kitchen_item_starters"
            android:layout_alignParentStart="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/sv_kitchen_item_mains"
            android:layout_below="@+id/tv_kitchen_item_mains"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/color_white"
            android:textSize="25dp"
            android:text="Sides"
            android:id="@+id/tv_kitchen_item_sides"
            android:background="@drawable/text_view_header_bg"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_below="@+id/sv_kitchen_item_mains"
            android:layout_alignParentStart="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/sv_kitchen_item_sides"
            android:layout_below="@+id/tv_kitchen_item_sides"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/color_white"
            android:textSize="25dp"
            android:text="Desserts"
            android:id="@+id/tv_kitchen_item_desserts"
            android:background="@drawable/text_view_header_bg"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_below="@+id/sv_kitchen_item_sides"
            android:layout_alignParentStart="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/sv_kitchen_item_desserts"
            android:layout_below="@+id/tv_kitchen_item_desserts"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food Ready ?"
            android:textSize="30dp"
            android:id="@+id/b_kitchen_order_ready"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/sv_kitchen_item_desserts"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Complete ?"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:id="@+id/b_kitchen_order_finished"
            android:layout_below="@+id/b_kitchen_order_ready"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</ScrollView>
